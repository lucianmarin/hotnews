{% if view in ['recent', 'site_recent'] %}
    {% set rev = 'site_recent' %}
{% else %}
    {% set rev = 'site_index' %}
{% endif %}

<div class="entry">
    <h4 class="title">
        <a target="_blank" href="{{ article.url }}">
            {{ article.title }}
        </a>
    </h4>
    <div class="small">
        <a href="{{ reverse(rev, args=[article.domain]) }}">
            {{ article.domain }}
        </a>
        <b>&bull;</b>
        <b>{{ article.pub | shortdate }} ago</b>
        <b>&bull;</b>
        <a href="/text/{{ article.id }}/">text</a>
        {% if article.shares %}
            <b>&bull;</b>
            <b>{{ article.shares }} shares</b>
        {% endif %}
    </div>
    {% if article.description %}
        <div class="summary">
            {{ article.description | truncate(320) }}
        </div>
    {% endif %}
</div>

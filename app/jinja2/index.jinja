{% extends 'base.jinja' %}

{% block main %}
    {% for article in articles %}
        <div class="entry">
            <h4 class="title">
                <a target="_blank" href="{{ article.url }}">
                    {{ article.title }}
                </a>
            </h4>
            <div class="small">
                <a href="/{{ article.url | hostname }}{% if view == 'last' %}/recent{% endif %}/">
                    {{ article.url | hostname }}
                </a>
                <b>&bull;</b>
                <b>{{ article.pub | shortdate }} ago</b>
                <b>&bull;</b>
                <a href="/text/{{ article.id }}/">text</a>
                {% if article.shares %}
                    <b>&bull;</b>
                    <b>{{ article.shares }} shares</b>
                {% endif %}
            </div>
            {% if article.description %}
                <div class="summary">
                    {{ article.description | truncate(320) }}
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="entry">
            <div class="summary">Processing content...</div>
        </div>
    {% endfor %}
{% endblock %}

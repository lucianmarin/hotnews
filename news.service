[Unit]
Description=News service
After=network.target

[Service]
User=lucian
Group=lucian
PIDFile=/home/lucian/news/news.pid
RuntimeDirectory=uvicorn
WorkingDirectory=/home/lucian/news
ExecStart=/home/lucian/news/venv/bin/uvicorn main:app --uds note.socket
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=default.target

